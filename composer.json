{
    "name": "hugomyb/filament-error-mailer",
    "description": "Filament plugin for instant e-mail alerts on web errors, simplifying monitoring and application stability.",
    "keywords": [
        "hugomyb",
        "laravel",
        "filament-error-mailer"
    ],
    "homepage": "https://github.com/hugomyb/filament-error-mailer",
    "support": {
        "issues": "https://github.com/hugomyb/filament-error-mailer/issues",
        "source": "https://github.com/hugomyb/filament-error-mailer"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Mayonobe Hugo",
            "email": "hugomayonobe@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "filament/filament": "^3.0|^4.0",
        "spatie/laravel-package-tools": "^1.15.0"
    },
    "require-dev": {
        "nunomaduro/collision": "^7.9",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.1",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Hugomyb\\FilamentErrorMailer\\": "src/",
            "Hugomyb\\FilamentErrorMailer\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hugomyb\\FilamentErrorMailer\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Hugomyb\\FilamentErrorMailer\\FilamentErrorMailerServiceProvider"
            ],
            "aliases": {
                "FilamentErrorMailer": "Hugomyb\\FilamentErrorMailer\\Facades\\FilamentErrorMailer"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
